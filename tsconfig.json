{
  "compilerOptions": {
    "target": "es2024",
    "module": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react",
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": ["@webgpu/types"]
  },
  "include": ["src/**/*", "forge.env.d.ts"]
}
